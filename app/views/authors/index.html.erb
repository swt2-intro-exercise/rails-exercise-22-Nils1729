<h1>Listing Authors</h1>

<p><%= link_to "New", new_author_path %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
        <th><%= author.name %></th>
        <th><%= author.homepage %></th>
        <th><%= link_to "Show", author_path(author) %></th>
    </tr>
  <% end %>
</table>