<h1>Listing Authors</h1>

<p><%= link_to "New", new_author_path %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
        <th><%= author.name %></th>
        <th><%= author.homepage %></th>
        <th><%= link_to "Show", author_path(author) %></th>
        <th><%= link_to "Edit", edit_author_path(author) %></th>
        <th><%= link_to "Destroy", author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></th>
    </tr>
  <% end %>
</table>